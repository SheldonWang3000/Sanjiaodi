<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/pku_red</item>
        <item name="colorPrimary">@color/pku_red</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="AppImageTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="info_text">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="info_layout">
        <item name="android:minHeight">120dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <style name="radio_text">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/radio_text_color</item>
    </style>

    <style name="info_fragment_tab">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/tabs</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="info_title_black">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="info_sample_layout">
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="info_content">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
    <style name="info_content_sub">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="login_edit_text">
        <item name="android:background">@drawable/gray_edit_text</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="list_content">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12dp</item>
    </style>
    <style name="myself_content">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="hot_tag">
        <item name="android:clickable">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="type_selected">
        <item name="android:textSize">20dp</item>
    </style>
    <style name="type_select">
        <item name="android:textSize">10dp</item>
    </style>
</resources>
