<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray">
    <include layout="@layout/header_back"/>
    <LinearLayout
        android:id="@+id/tag_header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/header_back"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/hot_tag"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tag_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门标签"
            android:textColor="@color/pku_red"
            android:textSize="14dp"
            android:layout_marginLeft="3dp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <View
        android:id="@+id/tag_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_below="@+id/tag_header"
        android:background="@color/pku_red"/>
    <in.srain.cube.views.ptr.PtrClassicFrameLayout
        android:id="@+id/tag_ptr_frame"
        android:layout_below="@+id/tag_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <in.srain.cube.views.loadmore.LoadMoreListViewContainer
            android:id="@+id/tag_load_more"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cube_mints_white">
            <ListView
                android:id="@+id/tag_list_view"
                android:divider="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </in.srain.cube.views.loadmore.LoadMoreListViewContainer>
    </in.srain.cube.views.ptr.PtrClassicFrameLayout>
    <include
        layout="@layout/process"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"/>
</RelativeLayout>
