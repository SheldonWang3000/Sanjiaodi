<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_gray">

    <include layout="@layout/header_back"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_back">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/content_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/index"
                android:clickable="true"
                android:scaleType="fitXY"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"/>
            <TextView
                android:id="@+id/content_time"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="活动时间：2016-01-21到2016-01-22"
                android:textColor="@android:color/black"
                android:background="@android:color/white"
                android:textSize="16dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/deadline_time"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:text="报名截止时间：2016-3-28"/>
            <RelativeLayout
                android:id="@+id/btn_sign"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:background="@color/sign_color"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/sign"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="我要报名"
                        android:textColor="@android:color/white"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:id="@+id/textView" />
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/content_html"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:textColor="@android:color/black"
                android:padding="5dp"/>
        </LinearLayout>

    </ScrollView>
    <include
        layout="@layout/process"
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:layout_centerInParent="true"/>
</RelativeLayout>
